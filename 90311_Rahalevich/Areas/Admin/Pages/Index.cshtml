@page
@model _90311_Rahalevich.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Insulin[0].InsulinName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insulin[0].Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insulin[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insulin[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Insulin)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.Image" alt="NoImage" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsulinName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.InsulinGroupId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.InsulinId"
                       class="btn btn-outline-info">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.InsulinId"
                       class="btn btn-outline-danger">
                        <span class="fas fa-trash-alt"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
